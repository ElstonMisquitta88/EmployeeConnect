@page "/EmployeeList"
<h3>EmployeeList</h3>
@using EmpApp.Data
@inject EmployeeModelService EmployeeService

@if (EmplData == null)
{
    <p><em>Loading...</em></p>
}
else
{
    @foreach (var forecast in EmplData)
    {
        <tr>
            <td>@forecast.FirstName </td>
            <td>@forecast.LastName  </td>
        </tr>
    }
}






<div class="form-group row">
    <label for="firstName" class="col-sm-2 col-form-label">
        First Name
    </label>
    <div class="col-sm-10">
        <InputText id="firstName" class="form-control" placeholder="First Name" @bind-Value="EmpInput.FirstName" />
    </div>
    <label for="firstName" class="col-sm-2 col-form-label">
        Last Name
    </label>
    <div class="col-sm-10">
        <InputText id="firstName" class="form-control" placeholder="First Name" @bind-Value="EmpInput.LastName " />
    </div>
</div>

<EditForm Model=@EmpInput OnSubmit=@FormSubmitted>
    <input type="submit" value="Submit" class="btn btn-primary" />
</EditForm>

